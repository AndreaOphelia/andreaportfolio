---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
---

<MainLayout title="Titel">
  <section class="relative" id="section1">
    <div class="">
      <h2 class="text-5xl md:text-8xl font-bold mb-10">
        <span style="font-family: 'Futura Cyrillic', sans-serif;"
          >KARRUSEL FESTIVAL</span
        >
      </h2>
    </div>
    <div
      class="grid grid-cols-1 md:grid-cols-12 gap-y-10 gap-x-6 max-w-7xl mx-auto py-20 px-4 relative"
    >
      <!-- "[03]" over billederne -->
      <p
        class="parallax-image fade-in col-span-1 md:col-span-5 text-xl uppercase z-10 -mt-6 md:-mt-12"
        data-speed="0.03"
      >
        [03]
      </p>

      <!-- Billede 1 -->
      <div class="col-span-1 md:col-span-6">
        <img
          src="/karrusellanding.png"
          alt="Billede fra Karrusel Case"
          class="parallax-image fade-in w-full h-auto transition-transform duration-500 ease-out md:hover:scale-130 hover:brightness-105"
          data-speed="0.2"
        />
      </div>

      <!-- Spacer for layout balance -->
      <div class="hidden md:block md:col-span-2"></div>

      <!-- Billede 2 -->
      <div class="col-span-1 md:col-span-6">
        <img
          src="/karruselliste.png"
          alt="Billede fra Karrusel Case"
          class="parallax-image fade-in w-full h-auto transition-transform duration-500 ease-out md:hover:scale-130 hover:brightness-105"
          data-speed="0.1"
        />
      </div>

      <!-- Spacer -->
      <div class="hidden md:block md:col-span-3"></div>

      <!-- Billede 3 -->
      <div class="col-span-1 md:col-span-12 mt-10">
        <img
          src="/single.png"
          alt="Billede fra Karrusel Case"
          class="parallax-image fade-in w-130 h-auto transition-transform duration-500 ease-out md:hover:scale-130 hover:brightness-105"
          data-speed="0.05"
        />
      </div>
    </div>
  </section>
</MainLayout>

<script>
  window.addEventListener("scroll", () => {
    const parallaxElements = document.querySelectorAll(".parallax-image");
    const scrollY = window.scrollY;

    parallaxElements.forEach((el) => {
      const speed = parseFloat(el.getAttribute("data-speed")) || 0;
      el.style.transform = `translateY(${scrollY * speed}px)`;
    });
  });
</script>
