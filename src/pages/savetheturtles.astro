---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
---

<MainLayout title="Titel">
  <section class="relative h-screen" id="section1">
    <div class="">
      <h2 class="text-5xl md:text-8xl font-bold mb-10">
        <span style="font-family: 'Futura Cyrillic', sans-serif;"
          >SAVE THE TURTLES</span
        >
      </h2>
    </div>
    <div
      class="absolute inset-0 grid grid-cols-1 grid-rows-1 gap-4 w-full h-full max-w-7xl mx-auto"
    >
      <p
        class="parallax-image col-span-5 row-span-2 translate-x-10 translate-y-30 uppercase"
        data-speed="0.02"
      >
        [04]
      </p>

      <a
        href="https://scrollytellingturtles.netlify.app/"
        target="_blank"
        rel="noopener noreferrer"
      >
        <img
          src="/savetheturtles1.png"
          alt="Save the turtles"
          class="parallax-image max-w-full h-auto transform translate-x-10 translate-y-40"
          data-speed="0.1"
        />
      </a>
    </div>
  </section>
</MainLayout>
